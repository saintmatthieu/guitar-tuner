{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Linux)",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "stopOnEntry": false,
      "args": [
        // "indexOfProcessToLog=210",
        // "testWithMedianFilter=false",
        // "testCaseId=testFiles/notes/Admira_Classic/E4.wav | testFiles/noise/CS_Telecaster_noise.wav | -60"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=1:halt_on_error=0",
        "LSAN_OPTIONS": "verbosity=1:log_threads=1"
      }
    },
    {
      "name": "Launch (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": []
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${workspaceFolder}/eval/out"
    }
  ]
}
