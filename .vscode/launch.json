  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (Linux)",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": ["instanceCount=94", "logEstimateIndex=139"],
      // "args": [
      //   "sample=/home/matthieu/github/saintmatthieu/guitar-tuner/eval/testFiles/notes/debug/e2.wav"
      // ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Launch (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": []
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${workspaceFolder}/eval/out"
    }
  ]
}
